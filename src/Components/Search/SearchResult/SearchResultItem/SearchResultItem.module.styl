.body
    border-bottom 1px solid rgba(60,60,60,0.1)
    display flex
    padding 15px
    height 200px


.productImage
    background-color white
    cursor pointer
    display block
    height 200px
    width 200px

.productDesc
    padding-left 25px
    width calc(100% - 200px)

.firstLabel
    display flex
    justify-content space-between
    align-items flex-start
    margin-bottom 15px

.titleFirstLabel
    color #333
    cursor pointer
    font-size 1.75rem

.titleFirstLabel:hover
    color var(--primary-color-theme)

.secondLabel
    display flex
    justify-content space-between
    margin-bottom 35px

.priceSecondLabel
    color #111
    cursor pointer
    font-size 2rem

.addCartThirdLabel
    cursor pointer

.addCartThirdLabel:hover
    color var(--primary-color-theme)