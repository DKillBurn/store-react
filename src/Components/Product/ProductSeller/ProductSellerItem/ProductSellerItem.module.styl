.bodyProductSellerItem
    background-color #fff
    display flex
    border 1px solid #DDD
    border-radius 5px
    flex-direction column
    justify-content space-between
    margin 0 20px 0 0
    padding 30px 20px

.bodyProductSellerItem:first-child
    margin 0 20px 0 20px

.bodyProdSellerTitle
    display flex
    font-size 1rem

.bodyProdSellerPrice
    display flex
    flex-direction column
    font-size 1.5rem

.bodyProdSellerCart
    cursor pointer
    text-align center

.bodyProdSellerCart:hover
    color var(--primary-lightcolor-theme)